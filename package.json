{
  "name": "reflow",
  "version": "1.0.0",
  "description": "Chrome extension for managing and modifying HTTP/HTTPS requests",
  "repository": {
    "type": "git",
    "url": "https://github.com/holasoymalva/reflow.git"
  },
  "bugs": {
    "url": "https://github.com/holasoymalva/reflow/issues"
  },
  "scripts": {
    "build": "vite build",
    "build:prod": "NODE_ENV=production vite build",
    "dev": "vite build --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "verify": "node scripts/verify-build.js",
    "package": "npm run build:prod && npm run verify && npm run package:zip",
    "package:zip": "node scripts/package.js"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@vitejs/plugin-react": "^4.2.1",
    "archiver": "^7.0.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "fast-check": "^3.19.0"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0"
  }
}
